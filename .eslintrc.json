{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": [
    "airbnb-base",
    "plugin:security/recommended"
  ],
  "rules": {
    "comma-dangle": "off",
    "import/extensions": [
      "warn",
      {
        "js": "never",
        "json": "never"
      }
    ],
    "max-len": [
      "warn",
      140
    ],
    "object-shorthand": "off",
    "object-curly-newline": "off",
    "no-console": "off",
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
